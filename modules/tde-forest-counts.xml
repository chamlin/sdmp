<template xmlns="http://marklogic.com/xdmp/tde">
    <path-namespaces>
        <path-namespace>
            <prefix>fs</prefix>
            <namespace-uri>http://marklogic.com/xdmp/status/forest</namespace-uri>
        </path-namespace>
    </path-namespaces>
    <context>/fs:forest-counts</context>
    <vars>
        <!-- b - base; p - prefix -->
        <var>
            <name>B</name>
            <val>xs:string ('http://marklogic.com/sdmp')</val>
        </var>
        <var>
            <name>BSLASH</name>
            <val>xs:string (fn:concat ($B, '/'))</val>
        </var>
        <var>
            <name>F</name>
            <val>xs:string (fn:concat ($B, '/forest'))</val>
        </var>
        <var>
            <name>FSHARP</name>
            <val>xs:string (fn:concat ($F, '#'))</val>
        </var>
        <var>
            <name>FIRI</name>
            <val>sem:iri (fn:concat ($FSHARP, fs:forest-id))</val>
        </var>
    </vars>
    <triples>
        <triple>
            <subject>
                <val>$FIRI</val>
            </subject>
            <predicate>
                <val>sem:iri('http://www.w3.org/2000/01/rdf-schema#a')</val>
            </predicate>
            <object>
                <val>sem:iri($F)</val>
            </object>
        </triple>
        <triple>
            <subject>
                <val>$FIRI</val>
            </subject>
            <predicate>
                <val>sem:iri($BSLASH||'forestId')</val>
            </predicate>
            <object>
                <val>xs:unsignedLong(fs:forest-id)</val>
            </object>
        </triple>
        <triple>
            <subject>
                <val>$FIRI</val>
            </subject>
            <predicate>
                <val>sem:iri($BSLASH||'forestName')</val>
            </predicate>
            <object>
                <val>xs:string(fs:forest-name)</val>
            </object>
        </triple>
        <triple>
            <subject>
                <val>$FIRI</val>
            </subject>
            <predicate>
                <val>sem:iri($BSLASH||'currentTime')</val>
            </predicate>
            <object>
                <val>xs:dateTime(fs:current-time)</val>
            </object>
        </triple>
        <triple>
            <subject>
                <val>$FIRI</val>
            </subject>
            <predicate>
                <val>sem:iri($BSLASH||'documentCount')</val>
            </predicate>
            <object>
                <val>xs:unsignedLong(fs:document-count)</val>
            </object>
        </triple>
        <triple>
            <subject>
                <val>$FIRI</val>
            </subject>
            <predicate>
                <val>sem:iri($BSLASH||'directoryCount')</val>
            </predicate>
            <object>
                <val>xs:unsignedLong(fs:directory-count)</val>
            </object>
        </triple>
    </triples>
    <templates>
        <template>
            <context>fs:stands-counts/fs:stand-counts</context>
            <vars>
                <var>
                    <name>S</name>
                    <val>xs:string ('http://marklogic.com/sdmp/stand')</val>
                </var>        
                <var>
                    <name>SSHARP</name>
                    <val>xs:string (fn:concat ($S, '#'))</val>
                </var>
                <var>
                    <name>SIRI</name>
                    <val>sem:iri (fn:concat ($SSHARP, fs:stand-id))</val>
                </var>              
            </vars>
            <triples>
                <triple>
                    <subject>
                        <val>$SIRI</val>
                    </subject>
                    <predicate>
                        <val>sem:iri('http://www.w3.org/2000/01/rdf-schema#a')</val>
                    </predicate>
                    <object>
                        <val>sem:iri($S)</val>
                    </object>
                </triple>
                <triple>
                    <subject>
                        <val>$FIRI</val>
                    </subject>
                    <predicate>
                        <val>sem:iri(fn:concat($BSLASH, 'hasStand'))</val>
                    </predicate>
                    <object>
                        <val>$SIRI</val>
                    </object>
                </triple>
                <triple>
                    <subject>
                        <val>$SIRI</val>
                    </subject>
                    <predicate>
                        <val>sem:iri(fn:concat($BSLASH, 'path'))</val>
                    </predicate>
                    <object>
                        <val>xs:string(fs:path)</val>
                    </object>
                </triple>
                <triple>
                    <subject>
                        <val>$SIRI</val>
                    </subject>
                    <predicate>
                        <val>sem:iri(fn:concat($BSLASH, 'activeFragmentCount'))</val>
                    </predicate>
                    <object>
                        <val>xs:string(fs:active-fragment-count)</val>
                    </object>
                </triple>
                <triple>
                    <subject>
                        <val>$SIRI</val>
                    </subject>
                    <predicate>
                        <val>sem:iri(fn:concat($BSLASH, 'nascentFragmentCount'))</val>
                    </predicate>
                    <object>
                        <val>xs:string(fs:nascent-fragment-count)</val>
                    </object>
                </triple>
                <triple>
                    <subject>
                        <val>$SIRI</val>
                    </subject>
                    <predicate>
                        <val>sem:iri(fn:concat($BSLASH, 'deletedFragmentCount'))</val>
                    </predicate>
                    <object>
                        <val>xs:string(fs:deleted-fragment-count)</val>
                    </object>
                </triple>
            </triples>
        </template>
    </templates>
</template>
